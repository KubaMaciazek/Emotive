#:import hex kivy.utils.get_color_from_hex
<MainScreen>:
        canvas:
                Color:
                        rgba: hex('#d7f9f1')
                Rectangle:
                        size: self.size
        BoxLayout:
                orientation: 'vertical'
                Image:
                        source: 'data/emotive_logo_full_right.png'
                        size_hint: 1, .05
                Image:
                        source: 'data/emotive_logo_full_below.png'
                        size_hint: 1, .7
                Label:
                        id: emoji_output
                        size_hint: .9, .15
                        pos_hint: {'x': .05}
                        font_size: '30sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        color: hex('#162d50')
                BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, .1
                        Button:
                                id: clear_btn
                                size_hint: .5, 1
                                on_release: root.clear_screen()
                                background_color: hex('#162d50')
                                background_normal: ''
                                background_down: 'data/button_down.png'
                                StackLayout:
                                        pos: self.parent.pos
                                        size: self.parent.size
                                        Image:
                                                source: 'data/clear_icon.png'

                        Button:
                                id: copy_btn
                                size_hint: .5, 1
                                on_release: root.copy_output()
                                background_color: hex('#162d50')
                                background_normal: ''
                                background_down: 'data/button_down.png'
                                StackLayout:
                                        pos: self.parent.pos
                                        size: self.parent.size
                                        Image:
                                                source: 'data/copy_icon.png'
                        Button:
                                id: camera_btn
                                size_hint: 1, 1
                                on_release: root.print_emoji()
                                background_color: hex('#ffcb47')
                                background_normal: ''
                                background_down: 'data/button_down.png'
                                StackLayout:
                                        pos: self.parent.pos
                                        size: self.parent.size
                                        Image:
                                                source: 'data/camera_icon.png'
